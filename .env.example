# =================================================================
# TRAILVERSE - ENVIRONMENT CONFIGURATION
# =================================================================

# Application Settings
NODE_ENV=development
APP_NAME="Trailverse"
APP_URL="http://localhost:3000"
API_URL="http://localhost:5000"
PORT=5000
CLIENT_PORT=3000

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/trailverse"
MONGODB_URI="mongodb://root:password@localhost:27017/trailverse?authSource=admin"
REDIS_URL="redis://localhost:6379"
ELASTICSEARCH_URL="http://localhost:9200"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-trailverse-2024"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-key"

# External APIs - Maps & Location
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_API_KEY="your-mapbox-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Weather APIs
OPENWEATHER_API_KEY="your-openweather-api-key"
WEATHERAPI_KEY="your-weatherapi-key"

# National Park Service
NPS_API_KEY="your-national-park-service-api-key"

# Cloud Storage
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="trailverse-media"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-app-password"
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@trailverse.app"
FROM_NAME="Trailverse Team"

# AI/ML Services
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORG_ID="your-openai-org-id"
HUGGINGFACE_API_KEY="your-huggingface-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Social Authentication
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_PRIVATE_KEY="your-apple-private-key"

# Push Notifications
FIREBASE_SERVER_KEY="your-firebase-server-key"
FIREBASE_PROJECT_ID="your-firebase-project-id"
EXPO_ACCESS_TOKEN="your-expo-access-token"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID="your-google-analytics-id"
MIXPANEL_TOKEN="your-mixpanel-token"
SENTRY_DSN="your-sentry-dsn"
DATADOG_API_KEY="your-datadog-api-key"

# Real-time Features
WEBSOCKET_PORT=8080
REDIS_WEBSOCKET_ADAPTER=true

# AR/VR Services
VUFORIA_APP_KEY="your-vuforia-app-key"
VUFORIA_SECRET_KEY="your-vuforia-secret-key"

# Content Moderation
PERSPECTIVE_API_KEY="your-perspective-api-key"

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_AR_FEATURES=true
ENABLE_VOICE_FEATURES=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PAYMENT_FEATURES=false
ENABLE_BETA_FEATURES=false

# Development Settings
DEBUG=trailverse:*
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ML/AI Configuration
ML_MODEL_PATH="/models"
ML_BATCH_SIZE=32
ML_INFERENCE_TIMEOUT=5000
ENABLE_MODEL_CACHING=true

# Performance Settings
CACHE_TTL=3600
MAX_FILE_SIZE=10485760
REQUEST_TIMEOUT=30000
MAX_CONNECTIONS=100

# Mobile App Settings
MOBILE_APP_SCHEME="trailverse"
MOBILE_DEEP_LINK_URL="trailverse://dev"
MOBILE_UPDATE_URL="https://trailverse.dev/mobile-update"
